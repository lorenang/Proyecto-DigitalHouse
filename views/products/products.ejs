<!DOCTYPE html>
<html lang="es">
<%- include('../head.ejs') %>
<body>
    <%- include('../header.ejs') %>
    <main>
        <section class="productos">
            <div class="div_title">
                <h1>Lista de Productos</h1>
            </div>
            <div class="div-products">
                <% products.forEach(product => { %>
                    <div class="div_item_product">
                        <img src="/images/<%= product.image %>" alt="<%= product.name %>" class="product-image">
                        <h3><%= product.name %></h3>
                        <p>Descripcion: <%= product.description %></p>
                        <p>Precio: $<%= product.price %></p>
                        <p>Stock: $<%= product.stock %></p>
                        
                        <div class="articulo-options">
                            <a href="/details/<%= product.id %>"><button><i class="fa-solid fa-circle-info"></i></button></a>
                            <a href="/editproduct/<%= product.id %>"><button><i class="fa-solid fa-square-pen"></i></button></a>
                            <form action="/producto/eliminar/<%= product.id %>" method="post">
                                <button type="submit"><i class="fa-solid fa-trash-can"></i></button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        </section>
    </main>

    <%- include('../footer.ejs') %>
</body>
</html>