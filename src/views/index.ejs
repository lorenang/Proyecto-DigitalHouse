<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs') %>
<body>
    <%- include('partials/header.ejs') %>
    <%- include('partials/search.ejs') %>
    <main>
        <section class="articulos-principales">
            <% const lastThreeProducts = products.slice(Math.max(products.length - 3, 0)); %>
            <% lastThreeProducts.forEach(product => { %>
                <div class="articulo-item">
                    <img src="/images/<%= product.image %>" alt="<%= product.name %>" class="product-image">
                    <h3><%= product.name %></h3>
                    <p><%= product.description %></p>
                    <p>Precio: $<%= product.price %></p>
                    <p>Stock: $<%= product.stock %></p>
                    
                    <div class="articulo-options">
                        <a href="/details/<%= product.id %>"><i class="fa-solid fa-circle-info"></i></a>
                        <a href="/editproduct/<%= product.id %>"><i class="fa-solid fa-square-pen"></i></i></a>
                    </div>
                </div>
            <% }); %>
            
        </section>
    </main>
    <%- include('partials/footer.ejs') %>
</body>
</html>