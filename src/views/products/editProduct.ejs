<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/header.ejs') %>
    <main>
        
        <form action="/producto/editar/<%= product.id %>" method="post" enctype="multipart/form-data">
            <div class="div-form-create">
                <h2>EDITAR PRODUCTO</h2>
                <div>
                    <label for="name">Nombre</label>
                    <input type="text" placeholder="<%= product.name %>" value="<%= product.name %>" name="name" id="name" >
                </div>
                <div>
                    <label for="description">Descripcion</label>
                    <input type="text" placeholder="<%= product.description %>" name="description" id="description" value="<%= product.description %>">
                </div>
                <div>
                    <label for="category">Categoria</label>
                    <input type="text" placeholder="<%= product.category %>" name="category" id="category" value="<%= product.category %>">
                </div>
                <div>
                    <label for="price">Precio</label>
                    <input type="number" placeholder="<%= product.price %>" name="price" id="price" value="<%= product.price %>">
                </div>
                <div>
                    <label for="stock">Stock</label>
                    <input type="number" placeholder="<%= product.stock %>" name="stock" id="stock" value="<%= product.stock %>">
                </div>
                <div>
                    <img src="/images/<%= product.image %>" alt="">
                </div>
                <div>
                    <label for="productImage">Seleccionar imagen:</label>
                    <input type="file" id="productImage" name="productImage" accept="image/*">
                </div>
                <div class="div-button-submit">
                    <button type="submit" class="btn-new-product">GUARDAR</button>
                </div>
            </div>
        </form> 
    </main>
    <%- include('../partials/footer.ejs') %>
</body>
</html>