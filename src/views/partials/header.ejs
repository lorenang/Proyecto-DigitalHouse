                        <li><a href="/carrito"><i class="fa-solid fa-cart-shopping"></i></a></li>
                        <li><a href="/logout"><i class="fa-solid fa-right-from-bracket"></i></a></li>
                    <% } else { %>
                        <li>
                            <a href="/login" class="link"><i class="fa-solid fa-right-to-bracket"></i></a>
                        </li>
                        <li>
                            <a href="/register" class="link"><i class="fa-solid fa-address-card"></i></a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        </div>
    </div>
    
