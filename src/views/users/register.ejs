<!DOCTYPE html>
<html>
<%- include('../partials/head.ejs') %>
<body>
<%- include('../partials/header.ejs') %>
<link rel="stylesheet" href="../css/register.css" />
<div class="signin-container">
    <h1>Bienvenidos a Purum</h1>
    <form action="/users" method="post" enctype="multipart/form-data" class="form-register">
        <h2>Te invitamos a ser parte</h2>
        <div class="form-register-item">
            <label for="fullname">Nombre completo</label>
            <input type="text" id="fullname" name="fullname" placeholder="Nombre completo" value="<%= typeof old !== 'undefined' && old.fullname ? old.fullname : '' %>">
            <% if (locals.errors && errors.fullname){ %>
            <span class="form-validationError"> <%= errors.fullname.msg %> </span>
            <% } %>
        </div>
        <div class="form-register-item">
            <label for="username">Usuario</label>
            <input type="text" id="username" name="username" placeholder="Usuario" value="<%= typeof old !== 'undefined' && old.username ? old.username : '' %>">
            <% if (locals.errors && errors.username){ %>
            <span class="form-validationError"> <%= errors.username.msg %> </span>
            <% } %>
        </div>
        <div class="form-register-item">
            <label for="email">Correo electrónico</label>
            <input id="email" name="email" placeholder="Correo electrónico" value="<%= typeof old !== 'undefined' && old.email ? old.email : '' %>">
            <% if (locals.errors && errors.email){ %>
            <span class="form-validationError"> <%= errors.email.msg %> </span>
            <% } %>
        </div>
        <div class="form-register-item">
            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" placeholder="Contraseña">
            <% if (locals.errors && errors.password){ %>
            <span class="form-validationError"> <%= errors.password.msg %> </span>
            <% } %>
        </div>
        <div class="form-register-item">
            <label for="confirm_password">Confirmar contraseña</label>
            <input type="password" id="confirm_password" name="confirm_password" placeholder="Confirmar contraseña">
            <% if (locals.errors && errors.confirm_password){ %>
            <span class="form-validationError"> <%= errors.confirm_password.msg %> </span>
            <% } %>
        </div>
        <div class="form-register-item">
            <label for="userImage">Imagen de perfil</label>
            <input type="file" id="userImage" name="userImage" accept="image/*">
            <% if (locals.errors && errors.userImage){ %>
            <span class="form-validationError"> <%= errors.userImage.msg %> </span>
            <% } %>
        </div>
        <div class="form-register-item">
            <input type="submit" class="btn" value="Registrarme">
        </div>
    </form>
    <br>
    <a href="/users/login">¿Ya tienes cuenta?</a>
</div>
<%- include('../partials/footer.ejs') %>
<script src="/js/registerValidations.js"></script>
</body>
</html>
