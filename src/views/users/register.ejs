                <label for="confirmPassword">Repite la contrase単a</label>
                <input type="password" placeholder="Repite tu contrase単a" name="confirmPassword" id="confirmPassword"/>
            </div>
            <div>
                <input type="file" name="profileImage" id="profileImage" accept="image/*" />
            </div>
            <div class="form-register-item">
                <input class="btn" type="submit" value="Registrarme">
            </div>
        </form>
        <br>
        <a href="/login"> Ya tienes cuenta?</a>
    </div>

    <%- include('../footer.ejs') %>

